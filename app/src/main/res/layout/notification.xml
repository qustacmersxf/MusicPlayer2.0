<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/notification_imgv"
        android:src="@drawable/music"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/notification_text_name"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/notification_text_artist"
            android:maxLines="1"
            android:ellipsize="end"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:rowCount="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_columnWeight="1"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/stop"
                android:id="@+id/notification_stop"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_columnWeight="1"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/before"
                android:id="@+id/notification_previous"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_columnWeight="1"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/start"
                android:id="@+id/notification_start"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_columnWeight="1"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/next"
                android:id="@+id/notification_next"/>

        </GridLayout>

    </LinearLayout>

</LinearLayout>